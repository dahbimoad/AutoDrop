<ui:FluentWindow x:Class="AutoDrop.Views.Windows.HistoryWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                 xmlns:viewmodels="clr-namespace:AutoDrop.ViewModels"
                 xmlns:models="clr-namespace:AutoDrop.Models"
                 mc:Ignorable="d"
                 Title="Operation History"
                 Width="1100"
                 Height="650"
                 MinWidth="900"
                 MinHeight="500"
                 WindowStartupLocation="CenterScreen"
                 ExtendsContentIntoTitleBar="True"
                 d:DataContext="{d:DesignInstance viewmodels:HistoryViewModel, IsDesignTimeCreatable=False}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <ui:TitleBar Grid.Row="0" Title="Operation History"/>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="16,8,16,16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header Card - Safety Message -->
            <ui:Card Grid.Row="0" Margin="0,0,0,12" Padding="16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <ui:SymbolIcon Grid.Column="0" 
                                   Symbol="ShieldCheckmark24" 
                                   FontSize="32"
                                   Foreground="{DynamicResource SystemAccentColorPrimaryBrush}"
                                   VerticalAlignment="Center"
                                   Margin="0,0,16,0"/>
                    
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="Every move is reversible. Zero risk."
                                   FontSize="16"
                                   FontWeight="SemiBold"/>
                        <TextBlock Text="Every file operation is recorded with full rollback capability. Click Undo to reverse any action."
                                   FontSize="12"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                   TextWrapping="Wrap"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="2" 
                                Orientation="Horizontal" 
                                VerticalAlignment="Center"
                                Margin="16,0,0,0">
                        <!-- Stats -->
                        <Border Background="{DynamicResource SubtleFillColorSecondaryBrush}"
                                CornerRadius="8"
                                Padding="12,8"
                                Margin="0,0,8,0">
                            <StackPanel>
                                <TextBlock Text="{Binding TotalCount}"
                                           FontSize="20"
                                           FontWeight="Bold"
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="Total"
                                           FontSize="11"
                                           Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <Border Background="{DynamicResource SystemAccentColorPrimaryBrush}"
                                CornerRadius="8"
                                Padding="12,8">
                            <StackPanel>
                                <TextBlock Text="{Binding UndoableCount}"
                                           FontSize="20"
                                           FontWeight="Bold"
                                           Foreground="White"
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="Undoable"
                                           FontSize="11"
                                           Foreground="#CCFFFFFF"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </ui:Card>

            <!-- Search and Filter Bar -->
            <Grid Grid.Row="1" Margin="0,0,0,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <ui:TextBox Grid.Column="0"
                            PlaceholderText="Search by filename or path..."
                            Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                            Icon="{ui:SymbolIcon Search24}"
                            Margin="0,0,12,0"/>

                <ComboBox Grid.Column="1"
                          ItemsSource="{Binding StatusFilters}"
                          SelectedItem="{Binding StatusFilter}"
                          Width="120"
                          Margin="0,0,8,0"/>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <ui:Button Content="Refresh"
                               Icon="{ui:SymbolIcon ArrowSync24}"
                               Appearance="Secondary"
                               Command="{Binding RefreshCommand}"
                               Margin="0,0,8,0"/>
                    <ui:Button Content="Undo Selected"
                               Icon="{ui:SymbolIcon ArrowUndo24}"
                               Appearance="Primary"
                               Command="{Binding UndoSelectedCommand}"
                               IsEnabled="{Binding CanUndoSelected}"/>
                </StackPanel>
            </Grid>

            <!-- History List -->
            <Border Grid.Row="2"
                    Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="8"
                    BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1">
                <Grid>
                    <!-- Loading Indicator -->
                    <ui:ProgressRing IsIndeterminate="True"
                                     Width="48"
                                     Height="48"
                                     Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"/>
                    
                    <!-- Empty State -->
                    <StackPanel VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                Visibility="{Binding Items.Count, Converter={StaticResource InverseCountToVisibilityConverter}}">
                        <ui:SymbolIcon Symbol="History24"
                                       FontSize="48"
                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                        <TextBlock Text="No history yet"
                                   FontSize="16"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                   Margin="0,12,0,4"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="File operations will appear here"
                                   FontSize="12"
                                   Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>

                    <!-- History DataGrid -->
                    <DataGrid x:Name="HistoryDataGrid"
                              ItemsSource="{Binding FilteredItems}"
                              SelectedItem="{Binding SelectedItem}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              IsReadOnly="True"
                              SelectionMode="Extended"
                              GridLinesVisibility="None"
                              HeadersVisibility="Column"
                              Background="Transparent"
                              BorderThickness="0"
                              SelectionChanged="OnSelectionChanged"
                              Visibility="{Binding Items.Count, Converter={StaticResource CountToVisibilityConverter}}">
                        <!-- Row style for undone items (grayed out) and selection -->
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Background" Value="Transparent"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Status}" Value="Undone">
                                        <Setter Property="Opacity" Value="0.5"/>
                                        <Setter Property="Background" Value="{DynamicResource SubtleFillColorSecondaryBrush}"/>
                                    </DataTrigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="{DynamicResource AccentFillColorDefaultBrush}"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>
                        <DataGrid.Columns>
                            <!-- Status Column -->
                            <DataGridTemplateColumn Header="" Width="40">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate DataType="{x:Type models:OperationHistoryItem}">
                                        <Border Width="24" 
                                                Height="24" 
                                                CornerRadius="12"
                                                HorizontalAlignment="Center"
                                                ToolTip="{Binding Status}">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Status}" Value="Success">
                                                            <Setter Property="Background" Value="#10A010"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="Failed">
                                                            <Setter Property="Background" Value="#D02020"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="Undone">
                                                            <Setter Property="Background" Value="#808080"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="Pending">
                                                            <Setter Property="Background" Value="#FFA000"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock Text="{Binding StatusIcon}"
                                                       Foreground="White"
                                                       FontSize="12"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"/>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- File Name Column -->
                            <DataGridTemplateColumn Header="File" Width="200">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate DataType="{x:Type models:OperationHistoryItem}">
                                        <StackPanel Orientation="Horizontal" Margin="8,0">
                                            <ui:SymbolIcon FontSize="16" 
                                                           Margin="0,0,8,0"
                                                           Foreground="{DynamicResource AccentTextFillColorPrimaryBrush}">
                                                <ui:SymbolIcon.Style>
                                                    <Style TargetType="ui:SymbolIcon">
                                                        <Setter Property="Symbol" Value="Document24"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsDirectory}" Value="True">
                                                                <Setter Property="Symbol" Value="Folder24"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </ui:SymbolIcon.Style>
                                            </ui:SymbolIcon>
                                            <TextBlock Text="{Binding ItemName}"
                                                       VerticalAlignment="Center"
                                                       TextTrimming="CharacterEllipsis"
                                                       ToolTip="{Binding ItemName}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Operation Column -->
                            <DataGridTemplateColumn Header="Operation" Width="70">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate DataType="{x:Type models:OperationHistoryItem}">
                                        <Border CornerRadius="4"
                                                Padding="6,2"
                                                HorizontalAlignment="Center"
                                                Background="{DynamicResource SubtleFillColorSecondaryBrush}">
                                            <TextBlock Text="{Binding OperationType}" 
                                                       FontSize="11"/>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- From/To Column -->
                            <DataGridTemplateColumn Header="From â†’ To" Width="*" MinWidth="300">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate DataType="{x:Type models:OperationHistoryItem}">
                                        <StackPanel Orientation="Horizontal" 
                                                    Margin="8,0"
                                                    VerticalAlignment="Center">
                                            <TextBlock Text="{Binding SourcePath, Converter={StaticResource PathToParentFolderConverter}}"
                                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                       TextTrimming="CharacterEllipsis"
                                                       MaxWidth="250"
                                                       ToolTip="{Binding SourcePath}"/>
                                            <ui:SymbolIcon Symbol="ArrowRight24" 
                                                           FontSize="14"
                                                           Margin="8,0"
                                                           Foreground="{DynamicResource TextFillColorTertiaryBrush}"/>
                                            <TextBlock Text="{Binding DestinationPath, Converter={StaticResource PathToParentFolderConverter}}"
                                                       FontWeight="SemiBold"
                                                       TextTrimming="CharacterEllipsis"
                                                       MaxWidth="250"
                                                       ToolTip="{Binding DestinationPath}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- AI Confidence Column -->
                            <DataGridTemplateColumn Header="Confidence" Width="90">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate DataType="{x:Type models:OperationHistoryItem}">
                                        <StackPanel Orientation="Horizontal" 
                                                    HorizontalAlignment="Center"
                                                    Visibility="{Binding AiConfidence, Converter={StaticResource StringNotEmptyToVisibilityConverter}}">
                                            <ui:SymbolIcon Symbol="BrainCircuit24" 
                                                           FontSize="14"
                                                           Margin="0,0,4,0"
                                                           Foreground="{DynamicResource AccentTextFillColorTertiaryBrush}"/>
                                            <TextBlock VerticalAlignment="Center">
                                                <TextBlock.Text>
                                                    <MultiBinding StringFormat="{}{0:P0}">
                                                        <Binding Path="AiConfidence"/>
                                                    </MultiBinding>
                                                </TextBlock.Text>
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding AiConfidence, Converter={StaticResource ConfidenceLevelConverter}}" Value="Low">
                                                                <Setter Property="Foreground" Value="#D02020"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding AiConfidence, Converter={StaticResource ConfidenceLevelConverter}}" Value="Medium">
                                                                <Setter Property="Foreground" Value="#FFA000"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding AiConfidence, Converter={StaticResource ConfidenceLevelConverter}}" Value="High">
                                                                <Setter Property="Foreground" Value="#10A010"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Time Column -->
                            <DataGridTemplateColumn Header="When" Width="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate DataType="{x:Type models:OperationHistoryItem}">
                                        <TextBlock Text="{Binding TimeAgo}"
                                                   Margin="8,0"
                                                   Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                                   ToolTip="{Binding Timestamp, StringFormat={}{0:g}}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Actions Column -->
                            <DataGridTemplateColumn Header="Actions" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate DataType="{x:Type models:OperationHistoryItem}">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <ui:Button Appearance="Transparent"
                                                       ToolTip="Undo this operation"
                                                       Command="{Binding DataContext.UndoOperationCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                       CommandParameter="{Binding}"
                                                       Icon="{ui:SymbolIcon ArrowUndo24}"
                                                       IsEnabled="{Binding CanUndo}"
                                                       Padding="4"/>
                                            <ui:Button Appearance="Transparent"
                                                       ToolTip="Open destination folder"
                                                       Command="{Binding DataContext.OpenDestinationFolderCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                       CommandParameter="{Binding}"
                                                       Icon="{ui:SymbolIcon FolderOpen24}"
                                                       Padding="4"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>
        </Grid>

        <!-- Footer -->
        <Border Grid.Row="2" 
                Background="{DynamicResource SubtleFillColorSecondaryBrush}"
                Padding="16,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" 
                           VerticalAlignment="Center"
                           Foreground="{DynamicResource TextFillColorSecondaryBrush}">
                    <TextBlock.Text>
                        <MultiBinding StringFormat="{}Showing {0} of {1} operations">
                            <Binding Path="FilteredItems.Count"/>
                            <Binding Path="TotalCount"/>
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>
                
                <ui:Button Grid.Column="1"
                           Content="Clear History"
                           Icon="{ui:SymbolIcon Delete24}"
                           Appearance="Danger"
                           Command="{Binding ClearHistoryCommand}"
                           IsEnabled="{Binding TotalCount, Converter={StaticResource CountToBoolConverter}}"/>
            </Grid>
        </Border>

        <!-- Snackbar Presenter -->
        <ui:SnackbarPresenter x:Name="SnackbarPresenter" Grid.Row="1"/>
    </Grid>
</ui:FluentWindow>
